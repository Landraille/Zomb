<Window x:Class="Zombicide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zombicide"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/WpfLibrary;component/Assets/Images/background.jpg" />
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource DefaultButton}" Click="ButtonNewGame_OnClick" Content="New Game"/>
        <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource DefaultButton}" Click="ButtonLoadGame_OnClick" Content="Load Game"/>
        <Button Grid.Column="1" Grid.Row="3" Style="{StaticResource DefaultButton}" Click="ButtonQuit_OnClick" Content="Quit"/>
        
     </Grid>
</Window>
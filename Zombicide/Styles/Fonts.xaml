<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Zombicide.Styles">
    <Style TargetType="{x:Type Window}">
        <Setter Property="TextElement.FontFamily" Value="/Library;component/Font/#Chiller" />
        <Setter Property="FontSize" Value="20"/>
    </Style>
    <Style x:Key="Header1Style" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="20"/>
    </Style>
    <Style x:Key="Header2Style" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Margin" Value="10, 10, 5, 5"/>
    </Style>
    <Style x:Key="Header3Style" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="Margin" Value="5, 5, 0, 5"/>
    </Style>
</ResourceDictionary>